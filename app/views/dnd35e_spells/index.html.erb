<div id="sort">
	
	<label>[</label>	
			<%= link_to "Clear", "3.5_edition_spell_index", {:style => "color: black;" } %>
	<% Dnd35eClass.all.each do |classs| %>
		<% if classs.id == @class_highlight %>
			<%= link_to classs.name, { :controller => "dnd35e_spells", :action => "index", :class => classs.id }, {:style => "color: gray;" }%>
		<% else %>
			<%= link_to classs.name, { :controller => "dnd35e_spells", :action => "index", :class => classs.id }, {:style => "color: black;" } %>
		<% end %>
	<% end %>	
	<label>]</label>	
</div>

<div id="search">
		<div id="searchwrapper">
		<%= form_tag( "3.5_edition_spell_index" , :method => "get", class: "navbar-form", id: "search-form") do %>
			<%= hidden_field_tag "class",@class_highlight %>
      			<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search..."%>
		<% end %>
		</div>
</div>

<div id="index">


	<% if @class_highlight != nil  %>
		<% @levels.each_with_index do |level, index| %>
                	<h2><%= level %></h2> 
                	<% @spells[index].each do |spell| %>
                        	<%=link_to  spell.name, dnd35e_spell_url(spell) %>
                        	<br>
                	<% end %>
        	<% end %>   
	<% else  %>
		<h2> Spells </h2>
		<% @spells.each do |spell| %>
  			<%=link_to  spell.name, dnd35e_spell_url(spell) %>
			<br>
		<% end %>

		<div id=totop>
			<a href="3.5_edition_spell_index"> to Top</a>
		</div>
	<% end %>

	<% if @spells.flatten.empty?  %>
		<h2> None </h2>
	<% end %>
</div>
