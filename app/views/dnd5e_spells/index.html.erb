

<div id="sort">
	<label>[</label>	
			<%= link_to "Clear", "5th_edition_spell_index", {:style => "color: black;" } %>
	<% Dnd5eClass.all.each do |classs| %>
		<label>,</label>
		<% if classs.id == @class_highlight %>
			<%= link_to classs.name, { :controller => "dnd5e_spells", :action => "index", :class => classs.id }, {:style => "color: gray;" }%>
		<% else %>
			<%= link_to classs.name, { :controller => "dnd5e_spells", :action => "index", :class => classs.id }, {:style => "color: black;" } %>
		<% end %>
	<% end %>	
	<label>]</label>	
	<% if !@archetypes.empty? %>
		<br>	
		<label>[</label>	
		<% @archetypes.each_with_index do |archetype, index| %>
			<% if index > 0%> 
				<label>,</label>
			<% end %>
			<% if archetype.id == @archetype_highlight %>
				<%= link_to archetype.name, { :controller => "dnd5e_spells", :action => "index", :archetype => archetype.id, :class => @class_highlight }, {:style => "color: gray;" }%>
			<% else %>
				<%= link_to archetype.name, { :controller => "dnd5e_spells", :action => "index", :archetype => archetype.id, :class => @class_highlight }, {:style => "color: black;" } %>
			<% end %>
		<% end %>	
		<label>]</label>	
	<% end %>
</div>


<div id="search">
		<div id="searchwrapper">
		<%= form_tag( "dnd5espells" , :method => "get", class: "navbar-form", id: "search-form") do %>
      			<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search..." %>
